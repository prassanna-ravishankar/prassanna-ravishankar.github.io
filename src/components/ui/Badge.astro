---
interface Props {
  variant?: 'default' | 'primary' | 'outline';
  class?: string;
}

const { variant = 'default', class: className = "" } = Astro.props;

const variants = {
  default: "bg-white/5 text-gray-400 border border-white/10",
  primary: "bg-primary/10 text-primary border border-primary/20",
  outline: "bg-transparent text-gray-500 border border-white/10"
};
---

<span class:list={[
  "px-2 py-1 rounded text-xs font-mono inline-flex items-center",
  variants[variant],
  className
]}>
  <slot />
</span>

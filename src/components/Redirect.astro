---
interface Props {
  to: string;
}

const { to } = Astro.props;
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Redirecting...</title>
    <meta http-equiv="refresh" content={`0; url=${to}`}>
    <link rel="canonical" href={to}>
  </head>
  <body>
    <p>Redirecting to <a href={to}>{to}</a>...</p>
    <script>
      window.location.href = '{to}';
    </script>
  </body>
</html> 
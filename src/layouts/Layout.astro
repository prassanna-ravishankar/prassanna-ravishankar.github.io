---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  article?: boolean;
  publishedTime?: string;
  modifiedTime?: string;
  tags?: string[];
  author?: string;
}

const { 
  title, 
  description = "Prassanna Ravishankar's personal website - ML Engineer, Researcher, and Poetry Enthusiast", 
  image = "/images/profile.jpg",
  article = false,
  publishedTime,
  modifiedTime,
  tags = [],
  author = "Prassanna Ravishankar"
} = Astro.props;

// Ensure canonical URL always uses prassanna.io (non-www)
const canonicalURL = new URL(Astro.url.pathname, 'https://prassanna.io').toString();

// Generate comprehensive structured data
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Prassanna Ravishankar",
  "jobTitle": "Principal MLOps Engineer & AI Infrastructure Specialist",
  "description": "Algorithmic Vibesmith specializing in machine learning infrastructure, MLOps, and production AI systems",
  "url": "https://prassanna.io",
  "email": "me@prassanna.io",
  "image": "https://prassanna.io/images/profile.jpg",
  "worksFor": {
    "@type": "Organization",
    "name": "Papercup AI",
    "url": "https://papercup.com"
  },
  "alumniOf": [
    {
      "@type": "Organization",
      "name": "Computer Vision Center",
      "location": "Barcelona, Spain"
    },
    {
      "@type": "Organization", 
      "name": "University of Sheffield",
      "location": "Sheffield, UK"
    }
  ],
  "knowsAbout": [
    "Machine Learning", "Artificial Intelligence", "MLOps", "Python", "PyTorch",
    "Kubernetes", "Docker", "AWS", "GCP", "Computer Vision", "NLP", "Infrastructure"
  ],
  "sameAs": [
    "https://github.com/prassanna-ravishankar",
    "https://linkedin.com/in/prassanna-ravishankar",
    "https://x.com/thenomadiccoder"
  ]
};

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Prassanna Ravishankar - Algorithmic Vibesmith's Digital Lab",
  "description": "Algorithmic alchemy insights, ML infrastructure wizardry, and cutting-edge technology solutions",
  "url": "https://prassanna.io",
  "author": personSchema,
  "publisher": personSchema,
  "inLanguage": "en-US",
  "copyrightYear": new Date().getFullYear(),
  "copyrightHolder": personSchema,
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://prassanna.io/blog?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};

// Generate article schema if this is an article
const articleSchema = article ? {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "image": new URL(image, Astro.url).toString(),
  "datePublished": publishedTime,
  "dateModified": modifiedTime || publishedTime,
  "author": {
    "@type": "Person",
    "name": author,
    "url": "https://prassanna.io"
  },
  "publisher": {
    "@type": "Person",
    "name": "Prassanna Ravishankar",
    "url": "https://prassanna.io"
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalURL
  },
  "keywords": tags.join(", ")
} : null;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#3b82f6" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content={author} />
    
    <!-- Preload critical resources -->
    <link rel="preload" href="/favicon.svg" as="image" />
    <link rel="preload" href="/images/profile.jpg" as="image" />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={article ? "article" : "website"} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />
    <meta property="og:site_name" content="Prassanna Ravishankar" />
    <meta property="og:locale" content="en_US" />
    
    {article && publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {article && modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
    {article && tags.length > 0 && tags.map(tag => <meta property="article:tag" content={tag} />)}
    {article && <meta property="article:author" content={author} />}
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />
    <meta property="twitter:site" content="@thenomadiccoder" />
    <meta property="twitter:creator" content="@thenomadiccoder" />

    <!-- Additional SEO meta tags -->
    <meta name="language" content="en" />
    <meta name="revisit-after" content="7 days" />
    <meta name="rating" content="general" />
    
    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="Prassanna Ravishankar - Blog" href="/rss.xml" />
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
    {articleSchema && <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />}

    <!-- Google Analytics -->
    <script
      type="text/partytown"
      src="https://www.googletagmanager.com/gtag/js?id=G-Z5QBL0321X"
    ></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'G-Z5QBL0321X', {
        anonymize_ip: true,
        cookie_flags: 'SameSite=None;Secure'
      });
    </script>
    
    <!-- Allow additional head content -->
    <slot name="head" />
  </head>
  <body>
    <div class="flex flex-col min-h-screen">
      <Header />
      <main class="flex-grow">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html> 
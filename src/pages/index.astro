---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';

// Fetch content from all collections
const verses = await getCollection('verses', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

const projects = await getCollection('projects', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

const blogPosts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

const podcastEpisodes = await getCollection('podcasts', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

// Combine all content items
const allContent = [
  ...verses.map(item => ({
    type: 'verse',
    slug: `/verses/${item.slug}/`,
    title: item.data.title,
    description: item.data.description || '',
    pubDate: item.data.pubDate,
  })),
  ...projects.map(item => ({
    type: 'project',
    slug: `/projects/${item.slug}/`,
    title: item.data.title,
    description: item.data.description || '',
    pubDate: item.data.pubDate,
  })),
  ...blogPosts.map(item => ({
    type: 'blog',
    slug: `/blog/${item.slug}/`,
    title: item.data.title,
    description: item.data.description || '',
    pubDate: item.data.pubDate,
  }))
];

// Sort by date (newest first) and take the 6 most recent items
const latestContent = allContent
  .sort((a, b) => b.pubDate.valueOf() - a.pubDate.valueOf())
  .slice(0, 6);

// Get latest podcast episodes
const latestEpisodes = podcastEpisodes
  .sort((a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate))
  .slice(0, 3); // Show latest 3 episodes
---

<Layout title="Prassanna Ravishankar - ML Engineer, Researcher, and Verse Writer">
  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center py-16 px-4 -mt-20 pt-20">
    <div class="max-w-5xl mx-auto">
      <div class="flex flex-col md:flex-row items-center gap-12 md:gap-16">
        <div class="md:w-1/2 space-y-6">
          <h1 class="text-5xl md:text-7xl font-bold leading-tight">
            <span class="text-teal-600 dark:text-teal-400">Prassanna</span> Ravishankar
          </h1>

          <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 font-light">
            ML Engineer. Researcher. Verse Writer.
          </p>

          <!-- Gradient divider -->
          <div class="h-1 w-24 bg-gradient-to-r from-teal-500 via-purple-400 to-teal-600 rounded-full my-8"></div>

          <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
            I specialize in machine learning engineering and research, with a focus on making ML systems more efficient and accessible. When I'm not coding or researching, I write verses that explore musings and philosophy, and host podcasts discussing technology and its philosophical implications.
          </p>

          <div class="flex gap-6 pt-4">
            <a href="/projects/" class="text-teal-600 dark:text-teal-400 hover:text-teal-800 dark:hover:text-teal-300 transition-colors font-medium">
              Projects
            </a>
            <a href="/verses/" class="text-teal-600 dark:text-teal-400 hover:text-teal-800 dark:hover:text-teal-300 transition-colors font-medium">
              Verses
            </a>
            <a href="/podcasts/" class="text-teal-600 dark:text-teal-400 hover:text-teal-800 dark:hover:text-teal-300 transition-colors font-medium">
              Podcasts
            </a>
            <a href="/blog/" class="text-teal-600 dark:text-teal-400 hover:text-teal-800 dark:hover:text-teal-300 transition-colors font-medium">
              Blog
            </a>
          </div>

        </div>

        <div class="md:w-1/2 mt-8 md:mt-0">
          <div class="relative">
            <!-- Blurred colorful orb for depth -->
            <div class="absolute -inset-8 bg-gradient-to-tr from-teal-400/30 via-purple-400/20 to-teal-600/30 rounded-full blur-3xl"></div>

            <!-- Decorative offset background -->
            <div class="absolute inset-0 bg-gradient-to-tr from-teal-600/20 to-purple-600/20 rounded-2xl transform translate-x-4 translate-y-4"></div>

            <!-- Profile image with blob clip-path -->
            <div class="relative z-10">
              <Image
                src="/images/profile.webp"
                alt="Prassanna Ravishankar"
                width={500}
                height={500}
                class="w-full max-w-md mx-auto shadow-xl rounded-2xl"
                style="clip-path: url(#blob-clip);"
                loading="eager"
                fetchpriority="high"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Divider -->
  <div class="max-w-5xl mx-auto px-4">
    <div class="h-px w-full bg-gray-200 dark:bg-slate-700"></div>
  </div>

  <!-- Latest Content - Mind & Machine -->
  <section class="py-16 px-4">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-3xl font-medium mb-12 inline-block border-b-2 border-teal-600 dark:border-teal-400 pb-2">Mind & Machine</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {latestContent.map((item, index) => (
          <a href={item.slug} class={`group block ${index === 0 ? 'md:col-span-2 lg:col-span-1' : ''}`}>
            <article class="h-full bg-white dark:bg-slate-800 p-6 rounded-xl border border-gray-100 dark:border-slate-700 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg space-y-3">
              <div class="flex items-center gap-2">
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  {new Date(item.pubDate).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </p>
                <span class={`text-xs px-2 py-0.5 rounded-full border ${
                  item.type === 'podcast'
                    ? 'border-teal-300 dark:border-teal-700 text-teal-600 dark:text-teal-300'
                    : 'border-gray-300 dark:border-slate-600 text-gray-600 dark:text-gray-300'
                } capitalize`}>
                  {item.type}
                </span>
              </div>
              <h3 class="text-xl font-medium group-hover:text-teal-600 dark:group-hover:text-teal-400 transition-colors">
                {item.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-400">
                {item.description}
              </p>
              {item.type === 'podcast' && (
                <div class="flex items-center text-teal-600 dark:text-teal-400 text-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
                  </svg>
                  Listen to episode
                </div>
              )}
            </article>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Divider -->
  <div class="max-w-5xl mx-auto px-4">
    <div class="h-px w-full bg-gray-200 dark:bg-slate-700"></div>
  </div>

  <!-- Podcasts Section - Media Player Look -->
  <section class="py-16 px-4">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-3xl font-medium mb-12 inline-block border-b-2 border-teal-600 dark:border-teal-400 pb-2">Podcasts</h2>

      <div class="space-y-12">
        <!-- Main podcast showcase with dark background -->
        <div class="relative bg-slate-900 rounded-2xl p-8 overflow-hidden">
          <!-- Static waveform SVG background -->
          <div class="absolute inset-0 opacity-10">
            <svg class="w-full h-full" preserveAspectRatio="none" viewBox="0 0 1200 200">
              <path d="M0,100 Q30,60 60,100 T120,100 T180,100 T240,100 T300,100 T360,100 T420,100 T480,100 T540,100 T600,100 T660,100 T720,100 T780,100 T840,100 T900,100 T960,100 T1020,100 T1080,100 T1140,100 T1200,100"
                    stroke="currentColor"
                    stroke-width="2"
                    fill="none"
                    class="text-teal-400"/>
              <path d="M0,100 Q30,140 60,100 T120,100 T180,100 T240,100 T300,100 T360,100 T420,100 T480,100 T540,100 T600,100 T660,100 T720,100 T780,100 T840,100 T900,100 T960,100 T1020,100 T1080,100 T1140,100 T1200,100"
                    stroke="currentColor"
                    stroke-width="1.5"
                    fill="none"
                    class="text-purple-400"
                    opacity="0.5"/>
            </svg>
          </div>

          <div class="relative z-10 max-w-3xl">
            <h3 class="text-2xl font-medium mb-4 text-white">Explore my podcast conversations</h3>
            <p class="text-gray-300 text-lg mb-6">
              Join me for discussions on machine learning, technology, and philosophical musings with industry experts and thought leaders.
            </p>
            <a href="/podcasts" class="inline-flex items-center px-6 py-3 bg-teal-600 hover:bg-teal-500 text-white rounded-lg transition-colors group">
              Browse all episodes
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transition-transform group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>

        <!-- Episodes as playlist tracks -->
        {latestEpisodes.length > 0 && (
          <div>
            <h3 class="text-xl font-medium mb-6 text-gray-800 dark:text-gray-200">Latest Episodes</h3>
            <div class="space-y-3">
              {latestEpisodes.map((episode, index) => {
                const episodeSlug = episode.id.split('/').pop().replace(/\.md$/, '');
                return (
                  <a href={`/podcasts/${episodeSlug}/`} class="group flex items-center gap-4 p-4 bg-white dark:bg-slate-800 rounded-lg border border-gray-100 dark:border-slate-700 hover:bg-gray-50 dark:hover:bg-slate-700 transition-colors">
                    <!-- Track number -->
                    <span class="text-2xl font-mono text-gray-300 dark:text-slate-600 w-8">{String(index + 1).padStart(2, '0')}</span>

                    <!-- Track info -->
                    <div class="flex-grow min-w-0">
                      <h4 class="font-medium text-gray-900 dark:text-white group-hover:text-teal-600 dark:group-hover:text-teal-400 truncate transition-colors">
                        {episode.data.title}
                      </h4>
                      <p class="text-sm text-gray-500 dark:text-gray-400 truncate">
                        {episode.data.description}
                      </p>
                    </div>

                    <!-- Duration badge -->
                    {episode.data.duration && (
                      <span class="text-xs text-gray-400 dark:text-gray-500 font-mono shrink-0">
                        {episode.data.duration}
                      </span>
                    )}

                    <!-- Play icon -->
                    <svg class="w-8 h-8 text-teal-600 dark:text-teal-400 opacity-0 group-hover:opacity-100 transition-opacity shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
                    </svg>
                  </a>
                );
              })}
            </div>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- SVG clip-path definition for blob shape -->
  <svg class="hidden" xmlns="http://www.w3.org/2000/svg">
    <defs>
      <clipPath id="blob-clip" clipPathUnits="objectBoundingBox">
        <path d="M0.5,0.02 C0.75,0.02,0.95,0.2,0.98,0.45 C1.0,0.7,0.85,0.95,0.55,0.98 C0.25,1.0,0.05,0.8,0.02,0.55 C0.0,0.3,0.2,0.02,0.5,0.02" />
      </clipPath>
    </defs>
  </svg>
</Layout>

---
import Layout from '../layouts/Layout.astro';
import TechRadar from '../components/TechRadar.astro';
import SEOBreadcrumbs from '../components/SEOBreadcrumbs.astro';
import { Image } from 'astro:assets';

const data = {
  name: 'Prassanna Ravishankar',
  title: 'AI Engineer & Infrastructure Specialist',
  tagline: 'Building the future of intelligent systems, one model at a time',
  description: `I specialize in the complete ML engineering stack - from data pipelines and model training 
    to scalable inference and MLOps infrastructure. My passion lies in bridging the gap between 
    cutting-edge AI research and production-ready systems that solve real-world problems.`,
  mission: `My mission is to democratize AI by building robust, scalable infrastructure that empowers 
    teams to deploy machine learning solutions with confidence and at scale.`,
  links: {
    website: 'https://prassanna.io',
    github: 'https://github.com/prassanna-ravishankar',
    linkedin: 'https://www.linkedin.com/in/prassanna-ravishankar',
    email: 'mailto:me@prassanna.io'
  },
  experience: [
    {
      company: 'Papercup AI',
      role: 'Principal MLOps Engineer + Platforms Team Lead',
      duration: 'Jan 2023 – Present',
      location: 'London, U.K.',
      type: 'current',
      achievements: [
        'Designed and led the ML cloud training stack from scratch with ClearML and Skypilot, scaling compute from 16 to 50 GPUs.',
        'Led an initiative to migrate the model serving stack to be serverless, reducing idle cost time by 90%. Built an internal library to create consistent interfaces, conventions and OpenTelemetry tracing.',
        'Designed and led an initiative to increase data processing speeds by 50x using Apache Beam with GCP\'s Dataflow using 250+ GPUs.',
        'Implemented a tool using GPT-4 and LangChain to automate creative text generation, reducing data acquisition time from ~4 months to ~2 weeks.',
        'Automated and productionized a transcription and translation workflow using Deepgram, GPT-4, LangChain, Temporal, FastAPI and Streamlit, allowing the asynchronous system to serve 1000% more workflows per day.',
        'Created the foundational Platforms team (SREs, MLOps, Data Engineers) and hired two MLOps engineers to the team.'
      ]
    },
    {
      company: 'Zenith AI (Acquired by Opentrons)',
      role: 'Senior Machine Learning Engineer',
      duration: 'Oct 2020 – Jan 2023',
      location: 'Belfast, U.K.',
      type: 'previous',
      achievements: [
        'Founding engineering team member, company acquired after 9 months.',
        'Reduced cumulative QA build time from 2800 minutes to 200 minutes per week by optimizing Docker builds.',
        'Designed an async queue-based graph executor reducing ML load time from 3 hours to 35 minutes.',
        'Led a team implementing secure self-service ML web app deployments, cutting wait times from 3 days to 15 minutes.'
      ]
    },
    {
      company: 'AnyVision (Now Oosto)',
      role: 'Applied Computer Vision Researcher',
      duration: 'Sep 2019 – Oct 2020',
      location: 'Belfast, U.K.',
      type: 'previous',
      achievements: [
        'Developed a Focus of Attention system for retail using 3D geometry and depth estimation.',
        'Built a defect classification prototype in 48 hours, later piloted by a major electrical company.'
      ]
    }
  ],
  skills: {
    programming: ['Python', 'Terraform', 'C++', 'TypeScript', 'Rust'],
    frameworks: ['PyTorch', 'Temporal', 'Scikit-Learn', 'SageMaker', 'Lightning', 'FastAPI', 'Streamlit', 'Hugging Face', 'LangChain', 'ONNX'],
    tools: ['Docker', 'AWS', 'NVIDIA', 'Git', 'Dagster/Airflow', 'GCP', 'Apache Beam', 'Kubernetes', 'Grafana', 'Modal', 'Ray']
  },
  education: [
    {
      institution: 'Computer Vision Center',
      degree: 'PhD Student and Teaching Assistant',
      duration: 'May 2013 – Feb 2017',
      location: 'Barcelona, Spain',
      details: 'Implemented Slither, a random forest framework for semantic segmentation using C++ and Python.',
      focus: 'Computer Vision, Machine Learning'
    },
    {
      institution: 'University of Sheffield',
      degree: 'MSc. Computer Vision',
      duration: 'Sep 2011 – Sep 2012',
      location: 'Sheffield, U.K.',
      details: 'Worked on face recognition, traffic analysis, and FPGA-based cryptography.',
      focus: 'Computer Vision, Deep Learning'
    }
  ],
  values: [
    {
      title: 'Innovation',
      description: 'Constantly exploring cutting-edge technologies and methodologies to solve complex problems.',
      icon: 'lightbulb'
    },
    {
      title: 'Scalability', 
      description: 'Building systems that grow with your needs, from prototype to production.',
      icon: 'trending-up'
    },
    {
      title: 'Collaboration',
      description: 'Fostering cross-functional teamwork to deliver exceptional AI solutions.',
      icon: 'users'
    },
    {
      title: 'Quality',
      description: 'Maintaining high standards in code quality, testing, and system reliability.',
      icon: 'shield-check'
    }
  ]
};

// Breadcrumbs for SEO
const breadcrumbs = [
  { name: 'Home', url: 'https://prassanna.io' },
  { name: 'About', url: 'https://prassanna.io/about' }
];
---

<Layout 
  title="About Prassanna Ravishankar | Principal MLOps Engineer & AI Infrastructure Expert"
  description="Principal MLOps Engineer at Papercup AI with expertise in ML infrastructure, AI systems, and production machine learning. PhD researcher in Computer Vision with 10+ years in AI engineering."
  image="/images/about-og.jpg"
>
  <link rel="stylesheet" href="/src/styles/design-system.css" />
  
  <main class="about-container">
    <!-- Breadcrumbs -->
    <div class="breadcrumb-container">
      <SEOBreadcrumbs breadcrumbs={breadcrumbs} />
    </div>
    
    <!-- Hero Section -->
    <section class="about-hero">
      <div class="hero-content">
        <div class="hero-text">
          <h1 class="heading-hero">
            Hi, I'm <span class="text-gradient gradient-primary">Prassanna</span>
          </h1>
          <h2 class="hero-title">{data.title}</h2>
          <p class="hero-tagline">{data.tagline}</p>
          
          <div class="hero-description">
            <p class="text-body">{data.description}</p>
          </div>
          
          <div class="social-links">
            <a href={data.links.github} target="_blank" rel="noopener noreferrer" class="social-link github">
              <svg class="social-icon" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              GitHub
            </a>
            
            <a href={data.links.linkedin} target="_blank" rel="noopener noreferrer" class="social-link linkedin">
              <svg class="social-icon" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
              LinkedIn
            </a>
            
            <a href={data.links.email} class="social-link email">
              <svg class="social-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Email
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Mission Statement -->
    <section class="mission-section">
      <div class="section-container">
        <div class="mission-content card-glass">
          <h2 class="heading-section">Mission Statement</h2>
          <p class="mission-text text-body">{data.mission}</p>
        </div>
      </div>
    </section>

    <!-- Tech Radar Section -->
    <section class="tech-radar-section">
      <TechRadar />
    </section>

    <!-- Values Section -->
    <section class="values-section">
      <div class="section-container">
        <div class="section-header">
          <h2 class="heading-section">Core Values</h2>
          <p class="text-body">The principles that guide my approach to AI engineering and collaboration</p>
        </div>
        
        <div class="values-grid">
          {data.values.map(value => (
            <div class="value-card">
              <div class="value-icon">
                {value.icon === 'lightbulb' && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                  </svg>
                )}
                {value.icon === 'trending-up' && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                  </svg>
                )}
                {value.icon === 'users' && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a4 4 0 11-8 0 4 4 0 018 0z"/>
                  </svg>
                )}
                {value.icon === 'shield-check' && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                )}
              </div>
              <h3 class="value-title">{value.title}</h3>
              <p class="value-description">{value.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Experience Section -->
    <section class="experience-section">
      <div class="section-container">
        <div class="section-header">
          <h2 class="heading-section">Professional Journey</h2>
          <p class="text-body">Building AI systems and leading engineering teams across different scales and domains</p>
        </div>
        
        <div class="experience-timeline">
          {data.experience.map((job, index) => (
            <div class={`experience-item ${job.type}`}>
              <div class="experience-marker">
                <div class="marker-dot"></div>
                {index < data.experience.length - 1 && <div class="marker-line"></div>}
              </div>
              
              <div class="experience-content">
                <div class="experience-header">
                  <div class="job-info">
                    <h3 class="job-role">{job.role}</h3>
                    <div class="job-details">
                      <span class="job-company">{job.company}</span>
                      <span class="job-location">{job.location}</span>
                    </div>
                  </div>
                  <div class="job-duration">
                    {job.type === 'current' && <span class="current-badge">Current</span>}
                    <span class="duration-text">{job.duration}</span>
                  </div>
                </div>
                
                <div class="job-achievements">
                  {job.achievements.map(achievement => (
                    <div class="achievement-item">
                      <svg class="achievement-icon" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                      <span class="achievement-text">{achievement}</span>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="skills-section">
      <div class="section-container">
        <div class="section-header">
          <h2 class="heading-section">Technical Arsenal</h2>
          <p class="text-body">Technologies and tools I use to build robust AI systems</p>
        </div>
        
        <div class="skills-grid">
          <div class="skill-category">
            <h3 class="skill-category-title">
              <svg class="category-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
              </svg>
              Programming
            </h3>
            <div class="skill-tags">
              {data.skills.programming.map(skill => (
                <span class="skill-tag programming">{skill}</span>
              ))}
            </div>
          </div>
          
          <div class="skill-category">
            <h3 class="skill-category-title">
              <svg class="category-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
              </svg>
              Frameworks
            </h3>
            <div class="skill-tags">
              {data.skills.frameworks.map(skill => (
                <span class="skill-tag frameworks">{skill}</span>
              ))}
            </div>
          </div>
          
          <div class="skill-category">
            <h3 class="skill-category-title">
              <svg class="category-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              Tools & Platforms
            </h3>
            <div class="skill-tags">
              {data.skills.tools.map(skill => (
                <span class="skill-tag tools">{skill}</span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Education Section -->
    <section class="education-section">
      <div class="section-container">
        <div class="section-header">
          <h2 class="heading-section">Academic Foundation</h2>
          <p class="text-body">Research and academic background in computer vision and machine learning</p>
        </div>
        
        <div class="education-grid">
          {data.education.map(edu => (
            <div class="education-card">
              <div class="education-header">
                <h3 class="education-degree">{edu.degree}</h3>
                <span class="education-duration">{edu.duration}</span>
              </div>
              
              <div class="education-institution">
                <span class="institution-name">{edu.institution}</span>
                <span class="institution-location">{edu.location}</span>
              </div>
              
              <div class="education-focus">
                <span class="focus-label">Focus:</span>
                <span class="focus-areas">{edu.focus}</span>
              </div>
              
              <p class="education-details">{edu.details}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="cta-content card-glass">
        <h2 class="heading-section">Let's Build Something Amazing</h2>
        <p class="text-body">
          Whether you're looking to scale your ML infrastructure, build new AI capabilities, 
          or tackle complex engineering challenges, I'd love to collaborate and help bring your vision to life.
        </p>
        
        <div class="cta-actions">
          <a href="/hire-me" class="btn btn-primary">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            Work Together
          </a>
          <a href="/projects" class="btn btn-secondary">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
            View Projects
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .about-container {
    min-height: 100vh;
    background: var(--color-bg-primary);
  }

  /* Hero Section */
  .about-hero {
    padding: var(--space-20) var(--space-8) var(--space-16);
    background: linear-gradient(135deg, 
      var(--color-primary-50), 
      var(--color-secondary-50)
    );
  }

  .dark .about-hero {
    background: linear-gradient(135deg, 
      var(--color-primary-950), 
      var(--color-secondary-950)
    );
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .hero-title {
    font-family: var(--font-family-display);
    font-size: var(--text-2xl);
    font-weight: var(--font-semibold);
    color: var(--color-text-secondary);
    margin: var(--space-4) 0;
  }

  .hero-tagline {
    font-size: var(--text-xl);
    color: var(--color-text-secondary);
    font-style: italic;
    margin-bottom: var(--space-8);
  }

  .hero-description {
    margin: var(--space-8) 0 var(--space-12) 0;
  }

  .hero-description .text-body {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    border-radius: var(--radius-lg);
    text-decoration: none;
    font-weight: var(--font-medium);
    transition: all var(--duration-200) var(--ease-out);
  }

  .social-link.github {
    background: var(--color-neutral-800);
    color: white;
  }

  .social-link.github:hover {
    background: var(--color-neutral-700);
    transform: translateY(-2px);
  }

  .social-link.linkedin {
    background: #0077B5;
    color: white;
  }

  .social-link.linkedin:hover {
    background: #006399;
    transform: translateY(-2px);
  }

  .social-link.email {
    background: var(--color-secondary-600);
    color: white;
  }

  .social-link.email:hover {
    background: var(--color-secondary-700);
    transform: translateY(-2px);
  }

  .social-icon {
    width: 20px;
    height: 20px;
  }

  /* Mission Section */
  .mission-section {
    padding: var(--space-20) var(--space-8);
  }

  .mission-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    padding: var(--space-12);
  }

  .mission-text {
    font-size: var(--text-xl);
    line-height: var(--leading-relaxed);
    margin-top: var(--space-6);
  }

  /* Tech Radar Section */
  .tech-radar-section {
    padding: var(--space-16) 0;
    background: var(--color-bg-secondary);
  }

  /* Sections */
  .values-section,
  .experience-section,
  .skills-section,
  .education-section {
    padding: var(--space-20) 0;
  }

  .experience-section,
  .education-section {
    background: var(--color-bg-secondary);
  }

  .section-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-8);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .section-header .text-body {
    font-size: var(--text-lg);
    margin-top: var(--space-4);
  }

  /* Values Section */
  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-8);
  }

  .value-card {
    text-align: center;
    padding: var(--space-8);
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border-primary);
    border-radius: var(--radius-2xl);
    transition: all var(--duration-300) var(--ease-out);
    box-shadow: var(--shadow-base);
  }

  .value-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  .value-icon {
    width: 60px;
    height: 60px;
    margin: 0 auto var(--space-6) auto;
    padding: var(--space-4);
    border-radius: var(--radius-2xl);
    background: linear-gradient(135deg, var(--color-primary-500), var(--color-secondary-500));
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .value-icon svg {
    width: 28px;
    height: 28px;
  }


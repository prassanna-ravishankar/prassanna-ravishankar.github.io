---
import Layout from '../../layouts/Layout.astro';
import D3TagConstellation from '../../components/D3TagConstellation.astro';
import SEOBreadcrumbs from '../../components/SEOBreadcrumbs.astro';
import { getCollection } from 'astro:content';

// Get all blog posts that are not drafts
const posts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

// Sort posts by date in descending order
const sortedPosts = posts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Generate comprehensive tag data for constellation
const tagMap = new Map();
posts.forEach(post => {
  post.data.tags?.forEach(tag => {
    if (!tagMap.has(tag)) {
      tagMap.set(tag, { name: tag, count: 0, posts: [] });
    }
    const tagData = tagMap.get(tag);
    tagData.count++;
    tagData.posts.push({
      title: post.data.title,
      url: `/blog/${post.slug}`,
      description: post.data.description || ''
    });
  });
});

const tagData = Array.from(tagMap.values())
  .sort((a, b) => b.count - a.count);

// Get unique tags for quick filters
const popularTags = tagData.slice(0, 8);

// Format date function
const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};

// Handle query parameters - redirect to clean URL if present
if (Astro.url.search) {
  return Astro.redirect('/blog/', 301);
}

// Breadcrumbs for SEO
const breadcrumbs = [
  { name: 'Home', url: 'https://prassanna.io' },
  { name: 'Blog', url: 'https://prassanna.io/blog' }
];
---

<Layout 
  title="Algorithmic Vibesmith Blog | ML Infrastructure & MLOps Insights | Prassanna Ravishankar"
  description="Technical blog covering machine learning engineering, AI infrastructure, MLOps best practices, production ML systems, and emerging AI technologies. In-depth tutorials and industry insights."
  image="/images/blog-og.jpg"
>
  <link rel="stylesheet" href="/src/styles/design-system.css" />
  
  <main class="blog-container">
    <!-- Breadcrumbs -->
    <div class="breadcrumb-container">
      <SEOBreadcrumbs breadcrumbs={breadcrumbs} />
    </div>
    
    <!-- Hero Section -->
    <section class="blog-hero">
      <div class="hero-content">
        <h1 class="heading-hero">
          Algorithmic <span class="text-gradient gradient-secondary">Alchemy</span>
        </h1>
        <p class="hero-subtitle text-body">
          Deep dives into machine learning, infrastructure, and the evolving landscape of artificial intelligence. 
          Practical insights from building AI systems at scale.
        </p>
        
        <div class="blog-stats">
          <div class="stat-item">
            <span class="stat-number">{posts.length}</span>
            <span class="stat-label">Articles</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">{tagData.length}</span>
            <span class="stat-label">Topics</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">{Math.round(posts.reduce((acc, post) => acc + (post.body?.length || 1000), 0) / 1000)}</span>
            <span class="stat-label">K Words</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Tag Constellation Section -->
    <section class="constellation-section">
      <D3TagConstellation tags={tagData} />
    </section>

    <!-- Popular Topics -->
    <section class="topics-section">
      <div class="section-container">
        <h2 class="heading-section">Popular Topics</h2>
        <div class="topics-grid">
          {popularTags.map(tag => (
            <a href={`/tags/${tag.name}/`} class="topic-card">
              <div class="topic-header">
                <h3 class="topic-name">{tag.name}</h3>
                <span class="topic-count">{tag.count} articles</span>
              </div>
              <div class="topic-posts">
                {tag.posts.slice(0, 2).map(post => (
                  <div class="topic-post">
                    <span class="post-title">{post.title}</span>
                  </div>
                ))}
                {tag.posts.length > 2 && (
                  <div class="topic-post more">
                    +{tag.posts.length - 2} more articles
                  </div>
                )}
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Latest Articles -->
    <section class="articles-section">
      <div class="section-container">
        <div class="section-header">
          <h2 class="heading-section">Latest Articles</h2>
          <p class="text-body">
            Fresh perspectives on AI engineering, infrastructure, and emerging technologies
          </p>
        </div>
        
        <div class="articles-grid">
          {sortedPosts.map((post, index) => (
            <article class={`article-card ${index < 3 ? 'featured' : ''}`}>
              <div class="article-content">
                <div class="article-header">
                  <time class="article-date" datetime={post.data.pubDate.toISOString()}>
                    {formatDate(post.data.pubDate)}
                  </time>
                  {index < 3 && <span class="featured-badge">Latest</span>}
                </div>
                
                <h3 class="article-title">
                  <a href={`/blog/${post.slug}/`} class="article-link">
                    {post.data.title}
                  </a>
                </h3>
                
                <p class="article-description">
                  {post.data.description}
                </p>
                
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="article-tags">
                    {post.data.tags.slice(0, 3).map(tag => (
                      <a href={`/tags/${tag}/`} class="article-tag">
                        {tag}
                      </a>
                    ))}
                    {post.data.tags.length > 3 && (
                      <span class="article-tag-more">+{post.data.tags.length - 3}</span>
                    )}
                  </div>
                )}
                
                <a href={`/blog/${post.slug}/`} class="read-more-link">
                  Read Article
                  <svg class="read-more-icon" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
        
        {sortedPosts.length === 0 && (
          <div class="empty-state">
            <div class="empty-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
              </svg>
            </div>
            <h3 class="heading-card">No Articles Found</h3>
            <p class="text-body">Check back soon for new insights!</p>
          </div>
        )}
      </div>
    </section>

    <!-- Newsletter CTA -->
    <section class="newsletter-section">
      <div class="newsletter-content card-glass">
        <h2 class="heading-section">Stay Updated</h2>
        <p class="text-body">
          Get the latest insights on AI engineering, infrastructure patterns, and emerging technologies 
          delivered straight to your inbox.
        </p>
        <div class="newsletter-actions">
          <a href="/rss.xml" class="btn btn-primary">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M6.503 20.752c0 1.794-1.456 3.248-3.251 3.248s-3.251-1.454-3.251-3.248c0-1.794 1.456-3.248 3.251-3.248s3.251 1.454 3.251 3.248zm-6.503-12.572v4.811c6.05.062 10.96 4.966 11.022 11.009h4.817c-.062-8.71-7.118-15.758-15.839-15.82zm0-3.368c10.58.046 19.152 8.594 19.183 19.188h4.817c-.03-13.231-10.755-23.954-24-24v4.812z"/>
            </svg>
            Subscribe to RSS
          </a>
          <a href="/tags" class="btn btn-secondary">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
            </svg>
            Browse All Topics
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .blog-container {
    min-height: 100vh;
    background: var(--color-bg-primary);
  }

  .breadcrumb-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-4) var(--space-8) 0;
  }

  /* Hero Section */
  .blog-hero {
    padding: var(--space-20) var(--space-8) var(--space-16);
    background: linear-gradient(135deg, 
      var(--color-secondary-50), 
      var(--color-primary-50)
    );
    text-align: center;
  }

  .dark .blog-hero {
    background: linear-gradient(135deg, 
      var(--color-secondary-950), 
      var(--color-primary-950)
    );
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-subtitle {
    font-size: var(--text-xl);
    margin: var(--space-6) 0 var(--space-12) 0;
    opacity: 0.9;
  }

  .blog-stats {
    display: flex;
    justify-content: center;
    gap: var(--space-12);
    flex-wrap: wrap;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-family: var(--font-family-display);
    font-size: var(--text-3xl);
    font-weight: var(--font-black);
    color: var(--color-secondary-600);
    line-height: var(--leading-none);
  }

  .stat-label {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin-top: var(--space-1);
  }

  /* Constellation Section */
  .constellation-section {
    padding: var(--space-16) 0;
    background: var(--color-bg-secondary);
  }

  /* Topics Section */
  .topics-section {
    padding: var(--space-20) 0;
  }

  .section-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-8);
  }

  .topics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-6);
  }

  .topic-card {
    display: block;
    padding: var(--space-6);
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border-primary);
    border-radius: var(--radius-2xl);
    text-decoration: none;
    color: inherit;
    transition: all var(--duration-300) var(--ease-out);
    box-shadow: var(--shadow-base);
  }

  .topic-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
    border-color: var(--color-secondary-300);
  }

  .topic-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-4);
  }

  .topic-name {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
  }

  .topic-count {
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
    background: var(--color-secondary-100);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
  }

  .dark .topic-count {
    background: var(--color-secondary-900);
  }

  .topic-posts {
    space-y: var(--space-2);
  }

  .topic-post {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
  }

  .topic-post.more {
    font-style: italic;
    color: var(--color-text-tertiary);
  }

  .post-title {
    display: block;
    margin-bottom: var(--space-1);
  }

  /* Articles Section */
  .articles-section {
    padding: var(--space-20) 0;
    background: var(--color-bg-secondary);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .section-header .text-body {
    font-size: var(--text-lg);
    margin-top: var(--space-4);
  }

  .articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-8);
  }

  .article-card {
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border-primary);
    border-radius: var(--radius-2xl);
    overflow: hidden;
    transition: all var(--duration-300) var(--ease-out);
    box-shadow: var(--shadow-base);
  }

  .article-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  .article-card.featured {
    border-color: var(--color-secondary-300);
    box-shadow: var(--shadow-secondary);
  }

  .article-content {
    padding: var(--space-6);
  }

  .article-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-4);
  }

  .article-date {
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
    font-family: var(--font-family-code);
  }

  .featured-badge {
    background: linear-gradient(45deg, var(--color-secondary-500), var(--color-secondary-600));
    color: white;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
  }

  .article-title {
    margin: 0 0 var(--space-4) 0;
  }

  .article-link {
    font-size: var(--text-xl);
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color var(--duration-200) var(--ease-out);
  }

  .article-link:hover {
    color: var(--color-secondary-600);
  }

  .article-description {
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-6);
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-bottom: var(--space-6);
  }

  .article-tag {
    font-size: var(--text-xs);
    color: var(--color-secondary-700);
    background: var(--color-secondary-100);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    text-decoration: none;
    transition: all var(--duration-200) var(--ease-out);
  }

  .article-tag:hover {
    background: var(--color-secondary-200);
    color: var(--color-secondary-800);
  }

  .dark .article-tag {
    background: var(--color-secondary-900);
    color: var(--color-secondary-300);
  }

  .dark .article-tag:hover {
    background: var(--color-secondary-800);
    color: var(--color-secondary-200);
  }

  .article-tag-more {
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
    background: var(--color-bg-tertiary);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
  }

  .read-more-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-secondary-600);
    text-decoration: none;
    font-weight: var(--font-medium);
    transition: all var(--duration-200) var(--ease-out);
  }

  .read-more-link:hover {
    color: var(--color-secondary-700);
    transform: translateX(4px);
  }

  .read-more-icon {
    width: 16px;
    height: 16px;
    transition: transform var(--duration-200) var(--ease-out);
  }

  .read-more-link:hover .read-more-icon {
    transform: translateX(2px);
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: var(--space-20);
    color: var(--color-text-secondary);
  }

  .empty-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto var(--space-6);
    color: var(--color-text-tertiary);
  }

  .empty-icon svg {
    width: 100%;
    height: 100%;
  }

  /* Newsletter Section */
  .newsletter-section {
    padding: var(--space-20) var(--space-8);
    background: linear-gradient(135deg, 
      var(--color-secondary-50), 
      var(--color-primary-50)
    );
  }

  .dark .newsletter-section {
    background: linear-gradient(135deg, 
      var(--color-secondary-950), 
      var(--color-primary-950)
    );
  }

  .newsletter-content {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
    padding: var(--space-12);
  }

  .newsletter-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    margin-top: var(--space-8);
    flex-wrap: wrap;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .blog-stats {
      gap: var(--space-8);
    }

    .hero-subtitle {
      font-size: var(--text-lg);
    }

    .topics-grid,
    .articles-grid {
      grid-template-columns: 1fr;
    }

    .topic-header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-2);
    }

    .article-header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-2);
    }

    .newsletter-actions {
      flex-direction: column;
      align-items: center;
    }

    .newsletter-actions .btn {
      width: 100%;
      max-width: 300px;
    }
  }

  @media (max-width: 480px) {
    .blog-stats {
      flex-direction: column;
      gap: var(--space-4);
    }

    .section-header .text-body {
      font-size: var(--text-base);
    }
  }
</style>
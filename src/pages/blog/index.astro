---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import { validSeries } from '../../content/config';
import { getQualifyingTopics } from '../../utils/topics';

// Handle query parameters - redirect to clean URL if present
if (Astro.url.search) {
  return Astro.redirect('/blog/', 301);
}

// Get all blog posts that are not drafts
const posts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

// Sort posts by date in descending order
const sortedPosts = posts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Count posts per series for display
const seriesCounts: Record<string, number> = {};
validSeries.forEach(series => {
  seriesCounts[series] = posts.filter(post =>
    post.data.series?.includes(series)
  ).length;
});

// Sort series by count (descending)
const sortedSeries = Object.entries(seriesCounts)
  .filter(([, count]) => count > 0)
  .sort(([, countA], [, countB]) => countB - countA);

const qualifyingTopics = await getQualifyingTopics();

// Get latest posts for description
const latestPosts = sortedPosts.slice(0, 3);

// SEO-optimized meta description
const blogDescription = `Explore ${posts.length} technical articles on machine learning, MLOps, AI engineering, and software development by Prassanna Ravishankar. Latest insights on ${latestPosts.map(p => p.data.title).slice(0, 2).join(', ')} and more.`;

// Blog-specific structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "Prassanna Ravishankar - Technical Blog",
  "description": blogDescription,
  "url": "https://prassanna.io/blog/",
  "author": {
    "@type": "Person",
    "name": "Prassanna Ravishankar",
    "url": "https://prassanna.io",
    "sameAs": [
      "https://github.com/prassanna-ravishankar",
      "https://linkedin.com/in/prassanna-ravishankar",
      "https://x.com/thenomadiccoder"
    ]
  },
  "blogPost": sortedPosts.slice(0, 10).map(post => ({
    "@type": "BlogPosting",
    "headline": post.data.title,
    "description": post.data.description,
    "url": `https://prassanna.io/blog/${post.slug}/`,
    "datePublished": post.data.pubDate.toISOString(),
    "dateModified": post.data.updatedDate?.toISOString() || post.data.pubDate.toISOString(),
    "author": {
      "@type": "Person",
      "name": "Prassanna Ravishankar"
    },
    "keywords": [...(post.data.series || []), ...(post.data.topics || [])].join(', '),
    "image": post.data.heroImage ? `https://prassanna.io${post.data.heroImage}` : "https://prassanna.io/images/profile.webp"
  }))
};
---

<Layout
  title="Technical Blog - Prassanna Ravishankar"
  description={blogDescription}
  structuredData={structuredData}
>
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8 text-center text-main">Blog</h1>

    <p class="text-lg mb-8 text-center text-muted max-w-3xl mx-auto">
      Technical insights on machine learning, MLOps, AI engineering, and software development.
      Sharing practical experiences and deep dives into the latest trends in tech.
    </p>

    <!-- Series Cloud -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4 text-center text-main/90">Browse by Series</h2>
      <div class="flex flex-wrap justify-center gap-3 max-w-4xl mx-auto">
        {sortedSeries.map(([series, count]) => (
          <a
            href={`/tags/${encodeURIComponent(series)}/`}
            class="px-4 py-2 bg-surface border border-accent/30 text-accent rounded-full text-sm font-medium hover:bg-accent/10 hover:text-accent transition-colors"
          >
            {series}
            <span class="ml-1 opacity-70 text-muted">({count})</span>
          </a>
        ))}
      </div>
    </section>

    <!-- Blog Posts Grid -->
    <section class="max-w-6xl mx-auto">
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {sortedPosts.map((post) => (
          <article class="bg-surface rounded-sm border border-accent/20 hover:border-accent/50 hover:shadow-[0_0_15px_rgba(217,128,52,0.1)] transition-all duration-300 group">
            {post.data.heroImage && (
              <Image
                src={post.data.heroImage}
                alt={post.data.title}
                width={400}
                height={192}
                class="w-full h-48 object-cover rounded-t-lg"
                loading="lazy"
              />
            )}
            <div class="p-6">
              <header class="mb-4">
                <h2 class="text-xl font-semibold mb-2">
                  <a
                    href={`/blog/${post.slug}/`}
                    class="text-main font-serif hover:text-accent transition-colors"
                  >
                    {post.data.title}
                  </a>
                </h2>
                <time
                  datetime={post.data.pubDate.toISOString()}
                  class="text-sm text-muted font-mono"
                >
                  {post.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              </header>

              <p class="text-muted mb-4 line-clamp-3">
                {post.data.description}
              </p>

              {/* Series tags (clickable) */}
              {post.data.series && post.data.series.length > 0 && (
                <div class="flex flex-wrap gap-1.5 mb-2">
                  {post.data.series.map(series => (
                    <a
                      href={`/tags/${encodeURIComponent(series)}/`}
                      class="px-2 py-0.5 bg-subtle/5 border border-accent/30 text-accent text-xs rounded hover:bg-subtle/10 transition-colors"
                    >
                      {series}
                    </a>
                  ))}
                </div>
              )}

              {/* Topic tags (clickable if qualifying, else display only) */}
              {post.data.topics && post.data.topics.length > 0 && (
                <div class="flex flex-wrap gap-1 mb-4">
                  {post.data.topics.slice(0, 3).map(topic =>
                    qualifyingTopics.has(topic) ? (
                      <a href={`/topics/${encodeURIComponent(topic)}/`}
                         class="px-2 py-0.5 bg-black/20 border border-subtle/10 text-muted text-xs rounded hover:bg-teal-100 dark:hover:bg-teal-900 transition-colors">
                        {topic}
                      </a>
                    ) : (
                      <span class="px-2 py-0.5 bg-black/20 border border-subtle/10 text-muted text-xs rounded">
                        {topic}
                      </span>
                    )
                  )}
                </div>
              )}

              <a
                href={`/blog/${post.slug}/`}
                class="text-accent hover:text-accent/80 font-medium text-sm hover:underline decoration-accent underline-offset-4"
              >
                Read more â†’
              </a>
            </div>
          </article>
        ))}
      </div>
    </section>
  </main>
</Layout>
---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found | Prassanna Ravishankar" description="The page you're looking for doesn't exist. Explore other content on Prassanna Ravishankar's website.">
  <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 text-center">
      <div>
        <h1 class="text-9xl font-bold text-main/80 dark:text-gray-700">404</h1>
        <h2 class="mt-6 text-3xl font-extrabold text-gray-900 dark:text-white">
          Page not found
        </h2>
        <p class="mt-2 text-sm text-gray-600 dark:text-muted">
          Sorry, we couldn't find the page you're looking for.
        </p>
      </div>
      
      <div class="mt-8 space-y-4">
        <div class="flex flex-col space-y-2">
          <a 
            href="/" 
            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-teal-600 hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 transition-colors"
          >
            Go back home
          </a>
          
          <a 
            href="/blog" 
            class="w-full flex justify-center py-2 px-4 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-main/80 bg-white dark:bg-slate-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 transition-colors"
          >
            Browse blog posts
          </a>
          
          <a 
            href="/projects" 
            class="w-full flex justify-center py-2 px-4 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-main/80 bg-white dark:bg-slate-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 transition-colors"
          >
            View projects
          </a>
        </div>
      </div>
      
      <div class="mt-8">
        <p class="text-sm text-muted dark:text-muted">
          Or search for what you're looking for:
        </p>
        <div class="mt-2 flex rounded-md shadow-sm">
          <input 
            type="text" 
            id="search-input"
            class="flex-1 min-w-0 block w-full px-3 py-2 rounded-l-md border-gray-300 dark:border-gray-600 bg-white dark:bg-slate-800 text-gray-900 dark:text-white focus:ring-teal-500 focus:border-teal-500 sm:text-sm"
            placeholder="Search content..."
          />
          <button 
            type="button"
            id="search-button"
            class="inline-flex items-center px-3 py-2 rounded-r-md border border-l-0 border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-muted dark:text-muted hover:bg-gray-100 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500"
          >
            <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    const searchButton = document.getElementById('search-button') as HTMLButtonElement;
    
    function performSearch() {
      const query = searchInput.value.trim();
      if (query) {
        // Simple search - redirect to Google site search
        window.location.href = `https://www.google.com/search?q=site:prassanna.io ${encodeURIComponent(query)}`;
      }
    }
    
    searchButton.addEventListener('click', performSearch);
    searchInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        performSearch();
      }
    });
  });
</script> 
---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { validSeries } from '../../content/config';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog', ({ data }) => {
    return import.meta.env.PROD ? !data.draft : true;
  });

  // Only generate pages for valid series tags (not topics)
  return validSeries.map((series) => {
    const filteredPosts = allPosts.filter((post) =>
      post.data.series?.includes(series)
    );
    return {
      params: { tag: series },
      props: { posts: filteredPosts, tag: series },
    };
  });
}

const { posts, tag } = Astro.props;

// Sort posts by date (newest first)
const sortedPosts = posts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Format date function
const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};

// Generate schema for series page
const seriesSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": `${tag} Articles`,
  "description": `All blog posts in the ${tag} series by Prassanna Ravishankar`,
  "url": `https://prassanna.io/tags/${encodeURIComponent(tag)}/`,
  "mainEntity": {
    "@type": "ItemList",
    "numberOfItems": sortedPosts.length,
    "itemListElement": sortedPosts.map((post, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "item": {
        "@type": "BlogPosting",
        "headline": post.data.title,
        "description": post.data.description,
        "url": `https://prassanna.io/blog/${post.slug}/`,
        "datePublished": post.data.pubDate.toISOString(),
        "author": {
          "@type": "Person",
          "name": "Prassanna Ravishankar"
        }
      }
    }))
  }
};
---

<Layout
  title={`${tag} Articles | Prassanna Ravishankar`}
  description={`Explore ${sortedPosts.length} articles on ${tag}. Deep dives into ${tag.toLowerCase()} by Prassanna Ravishankar.`}
>
  <!-- Series page structured data -->
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(seriesSchema)} />

  <div class="container mx-auto py-12 px-4">
    <div class="max-w-4xl mx-auto">
      <!-- Breadcrumb navigation -->
      <nav class="text-sm text-gray-500 dark:text-gray-400 mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
          <li>
            <a href="/" class="hover:text-teal-600 dark:hover:text-teal-400">Home</a>
          </li>
          <li>
            <svg class="w-3 h-3 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </li>
          <li>
            <a href="/blog/" class="hover:text-teal-600 dark:hover:text-teal-400">Blog</a>
          </li>
          <li>
            <svg class="w-3 h-3 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </li>
          <li>
            <span class="text-gray-700 dark:text-gray-300" aria-current="page">
              {tag}
            </span>
          </li>
        </ol>
      </nav>

      <!-- Header -->
      <header class="mb-12 text-center">
        <h1 class="text-4xl font-bold mb-4">
          <span class="text-teal-600 dark:text-teal-400">{tag}</span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400">
          {sortedPosts.length} {sortedPosts.length === 1 ? 'article' : 'articles'}
        </p>
      </header>

      <!-- Posts list -->
      <div class="space-y-8">
        {sortedPosts.map((post) => (
          <article class="bg-white dark:bg-slate-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            <div class="p-6">
              <div class="flex flex-col md:flex-row md:items-center justify-between mb-4">
                <h2 class="text-2xl font-bold">
                  <a
                    href={`/blog/${post.slug}/`}
                    class="hover:text-teal-600 dark:hover:text-teal-400 transition-colors"
                  >
                    {post.data.title}
                  </a>
                </h2>
                <time class="text-gray-500 dark:text-gray-400 text-sm mt-1 md:mt-0">
                  {formatDate(post.data.pubDate)}
                </time>
              </div>

              <p class="text-gray-600 dark:text-gray-300 mb-4">
                {post.data.description}
              </p>

              <!-- Series tags (clickable) -->
              {post.data.series && post.data.series.length > 0 && (
                <div class="flex flex-wrap gap-2 mb-2">
                  {post.data.series.map((seriesTag) => (
                    <a
                      href={`/tags/${encodeURIComponent(seriesTag)}/`}
                      class={`px-3 py-1 rounded-full text-sm font-medium transition-colors ${
                        seriesTag === tag
                          ? 'bg-teal-600 text-white'
                          : 'bg-teal-100 dark:bg-teal-900 text-teal-700 dark:text-teal-300 hover:bg-teal-200 dark:hover:bg-teal-800'
                      }`}
                    >
                      {seriesTag}
                    </a>
                  ))}
                </div>
              )}

              <!-- Topic tags (display only, not clickable) -->
              {post.data.topics && post.data.topics.length > 0 && (
                <div class="flex flex-wrap gap-1.5 mb-4">
                  {post.data.topics.slice(0, 4).map((topic) => (
                    <span class="px-2 py-0.5 rounded text-xs bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400">
                      {topic}
                    </span>
                  ))}
                </div>
              )}

              <a
                href={`/blog/${post.slug}/`}
                class="text-teal-600 dark:text-teal-400 hover:underline inline-flex items-center"
              >
                Read more
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>

      <!-- Back to blog link -->
      <div class="mt-12 pt-6 border-t border-gray-200 dark:border-gray-700 text-center">
        <a
          href="/blog/"
          class="text-teal-600 dark:text-teal-400 hover:underline inline-flex items-center"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to all posts
        </a>
      </div>
    </div>
  </div>
</Layout>

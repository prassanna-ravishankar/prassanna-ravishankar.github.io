---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { validSeries } from '../../content/config';

// Get all blog posts
const allPosts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

// Count posts per series
const seriesCounts: Record<string, number> = {};
validSeries.forEach(series => {
  seriesCounts[series] = allPosts.filter(post =>
    post.data.series?.includes(series)
  ).length;
});

// Sort series by count (descending)
const sortedSeries = Object.entries(seriesCounts)
  .sort(([, countA], [, countB]) => countB - countA);

// Series descriptions
const seriesDescriptions: Record<string, string> = {
  'Machine Learning': 'Deep dives into ML models, training, and infrastructure',
  'MLOps': 'Operations, deployment, and production ML systems',
  'AI Agents': 'Agent frameworks, protocols, and multi-agent systems',
  'Python': 'Python tooling, environment management, and best practices',
  'Startups': 'Building products, strategy, and startup insights',
  'Productivity': 'Developer workflows, tools, and efficiency',
};

// Generate schema for series page
const seriesSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Blog Series",
  "description": "Browse blog posts by series on Prassanna Ravishankar's website",
  "url": "https://prassanna.io/tags/",
  "mainEntity": {
    "@type": "ItemList",
    "numberOfItems": sortedSeries.length,
    "itemListElement": sortedSeries.map(([series, count], index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "item": {
        "@type": "Thing",
        "name": series,
        "url": `https://prassanna.io/tags/${encodeURIComponent(series)}/`,
        "description": `${count} blog posts in the ${series} series`
      }
    }))
  }
};
---

<Layout
  title="Blog Series | Prassanna Ravishankar"
  description={`Browse ${allPosts.length} articles across ${sortedSeries.length} series: Machine Learning, MLOps, AI Agents, Python, Startups, and Productivity.`}
>
  <!-- Series page structured data -->
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(seriesSchema)} />

  <div class="container mx-auto py-12 px-4">
    <div class="max-w-4xl mx-auto">
      <!-- Breadcrumb navigation -->
      <nav class="text-sm text-gray-500 dark:text-gray-400 mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
          <li>
            <a href="/" class="hover:text-teal-600 dark:hover:text-teal-400">Home</a>
          </li>
          <li>
            <svg class="w-3 h-3 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </li>
          <li>
            <a href="/blog/" class="hover:text-teal-600 dark:hover:text-teal-400">Blog</a>
          </li>
          <li>
            <svg class="w-3 h-3 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </li>
          <li>
            <span class="text-gray-700 dark:text-gray-300" aria-current="page">
              Series
            </span>
          </li>
        </ol>
      </nav>

      <!-- Header -->
      <header class="mb-12 text-center">
        <h1 class="text-4xl font-bold mb-4">Blog Series</h1>
        <p class="text-xl text-gray-600 dark:text-gray-400">
          {allPosts.length} articles across {sortedSeries.length} series
        </p>
      </header>

      <!-- Series grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {sortedSeries.map(([series, count]) => (
          <a
            href={`/tags/${encodeURIComponent(series)}/`}
            class="block p-6 bg-white dark:bg-slate-800 rounded-lg shadow-md hover:shadow-lg transition-all hover:-translate-y-1 border border-gray-200 dark:border-gray-700"
          >
            <div class="flex items-start justify-between mb-3">
              <h2 class="text-xl font-bold text-gray-900 dark:text-white">
                {series}
              </h2>
              <span class="bg-teal-100 dark:bg-teal-900 text-teal-700 dark:text-teal-300 px-3 py-1 rounded-full text-sm font-medium">
                {count} {count === 1 ? 'article' : 'articles'}
              </span>
            </div>
            <p class="text-gray-600 dark:text-gray-400">
              {seriesDescriptions[series] || `Explore articles on ${series}`}
            </p>
          </a>
        ))}
      </div>

      <!-- Back to blog link -->
      <div class="mt-12 pt-6 border-t border-gray-200 dark:border-gray-700 text-center">
        <a
          href="/blog/"
          class="text-teal-600 dark:text-teal-400 hover:underline inline-flex items-center"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to all posts
        </a>
      </div>
    </div>
  </div>
</Layout>

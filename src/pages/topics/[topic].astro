---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { getQualifyingTopics } from '../../utils/topics';

export async function getStaticPaths() {
  const [allPosts, allProjects] = await Promise.all([
    getCollection('blog', ({ data }) => import.meta.env.PROD ? !data.draft : true),
    getCollection('projects', ({ data }) => import.meta.env.PROD ? !data.draft : true),
  ]);

  const counts = new Map<string, number>();
  for (const item of [...allPosts, ...allProjects]) {
    for (const topic of item.data.topics ?? []) {
      counts.set(topic, (counts.get(topic) ?? 0) + 1);
    }
  }

  const qualifyingTopics = Array.from(counts.entries())
    .filter(([, c]) => c >= 2)
    .map(([t]) => t);

  return qualifyingTopics.map((topic) => {
    const filteredPosts = allPosts.filter((post) =>
      post.data.topics?.includes(topic)
    );
    const filteredProjects = allProjects.filter((project) =>
      project.data.topics?.includes(topic)
    );
    return {
      params: { topic },
      props: { posts: filteredPosts, projects: filteredProjects, topic },
    };
  });
}

const { posts, projects, topic } = Astro.props;

const sortedPosts = posts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const qualifyingTopics = await getQualifyingTopics();

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};

const allItems = [
  ...sortedPosts.map((p) => ({ "@type": "BlogPosting", "headline": p.data.title, "description": p.data.description, "url": `https://prassanna.io/blog/${p.slug}/`, "datePublished": p.data.pubDate.toISOString(), "author": { "@type": "Person", "name": "Prassanna Ravishankar" } })),
  ...projects.map((p) => ({ "@type": "SoftwareApplication", "name": p.data.title, "description": p.data.description, "url": `https://prassanna.io/projects/${p.slug}/` })),
];

const topicSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": `${topic} Articles`,
  "description": `All blog posts tagged ${topic} by Prassanna Ravishankar`,
  "url": `https://prassanna.io/topics/${encodeURIComponent(topic)}/`,
  "mainEntity": {
    "@type": "ItemList",
    "numberOfItems": allItems.length,
    "itemListElement": allItems.map((item, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "item": item,
    }))
  }
};
---

<Layout
  title={`${topic} Articles | Prassanna Ravishankar`}
  description={`Explore ${sortedPosts.length} articles on ${topic}. Deep dives into ${topic.toLowerCase()} by Prassanna Ravishankar.`}
>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(topicSchema)} />

  <div class="container mx-auto py-12 px-4">
    <div class="max-w-4xl mx-auto">
      <!-- Breadcrumb navigation -->
      <nav class="text-sm text-muted dark:text-muted mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
          <li>
            <a href="/" class="hover:text-teal-600 dark:hover:text-teal-400">Home</a>
          </li>
          <li>
            <svg class="w-3 h-3 text-muted" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </li>
          <li>
            <a href="/blog/" class="hover:text-teal-600 dark:hover:text-teal-400">Blog</a>
          </li>
          <li>
            <svg class="w-3 h-3 text-muted" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </li>
          <li>
            <a href="/topics/" class="hover:text-teal-600 dark:hover:text-teal-400">Topics</a>
          </li>
          <li>
            <svg class="w-3 h-3 text-muted" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </li>
          <li>
            <span class="text-gray-700 dark:text-main/80" aria-current="page">
              {topic}
            </span>
          </li>
        </ol>
      </nav>

      <!-- Header -->
      <header class="mb-12 text-center">
        <h1 class="text-4xl font-bold mb-4">
          <span class="text-teal-600 dark:text-teal-400">{topic}</span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-muted">
          {sortedPosts.length} {sortedPosts.length === 1 ? 'article' : 'articles'}
          {projects.length > 0 && ` · ${projects.length} ${projects.length === 1 ? 'project' : 'projects'}`}
        </p>
      </header>

      <!-- Posts list -->
      <div class="space-y-8">
        {sortedPosts.map((post) => (
          <article class="bg-white dark:bg-slate-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            <div class="p-6">
              <div class="flex flex-col md:flex-row md:items-center justify-between mb-4">
                <h2 class="text-2xl font-bold">
                  <a
                    href={`/blog/${post.slug}/`}
                    class="hover:text-teal-600 dark:hover:text-teal-400 transition-colors"
                  >
                    {post.data.title}
                  </a>
                </h2>
                <time class="text-muted dark:text-muted text-sm mt-1 md:mt-0">
                  {formatDate(post.data.pubDate)}
                </time>
              </div>

              <p class="text-gray-600 dark:text-main/80 mb-4">
                {post.data.description}
              </p>

              <!-- Series tags (clickable) -->
              {post.data.series && post.data.series.length > 0 && (
                <div class="flex flex-wrap gap-2 mb-2">
                  {post.data.series.map((seriesTag) => (
                    <a
                      href={`/tags/${encodeURIComponent(seriesTag)}/`}
                      class="px-3 py-1 rounded-full text-sm font-medium transition-colors bg-teal-100 dark:bg-teal-900 text-teal-700 dark:text-teal-300 hover:bg-teal-200 dark:hover:bg-teal-800"
                    >
                      {seriesTag}
                    </a>
                  ))}
                </div>
              )}

              <!-- Topic tags (display only on topic page — no recursive cross-linking) -->
              {post.data.topics && post.data.topics.length > 0 && (
                <div class="flex flex-wrap gap-1.5 mb-4">
                  {post.data.topics.slice(0, 4).map((t) => (
                    <span class="px-2 py-0.5 rounded text-xs bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-muted">
                      {t}
                    </span>
                  ))}
                </div>
              )}

              <a
                href={`/blog/${post.slug}/`}
                class="text-teal-600 dark:text-teal-400 hover:underline inline-flex items-center"
              >
                Read more
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>

      <!-- Related Projects -->
      {projects.length > 0 && (
        <section class="mt-12">
          <h2 class="text-2xl font-bold mb-6">Related Projects</h2>
          <div class="grid gap-4 md:grid-cols-2">
            {projects.map((project) => (
              <a href={`/projects/${project.slug}/`} class="block p-5 bg-white dark:bg-slate-800 rounded-lg border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-shadow">
                <h3 class="text-lg font-semibold mb-1">{project.data.title}</h3>
                <p class="text-gray-600 dark:text-muted text-sm">{project.data.description}</p>
              </a>
            ))}
          </div>
        </section>
      )}

      <!-- Back links -->
      <div class="mt-12 pt-6 border-t border-gray-200 dark:border-gray-700 text-center flex justify-center gap-6">
        <a
          href="/topics/"
          class="text-teal-600 dark:text-teal-400 hover:underline inline-flex items-center"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          All topics
        </a>
        <a
          href="/blog/"
          class="text-teal-600 dark:text-teal-400 hover:underline inline-flex items-center"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          All posts
        </a>
      </div>
    </div>
  </div>
</Layout>

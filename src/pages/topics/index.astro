---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const allPosts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

const counts = new Map<string, number>();
for (const post of allPosts) {
  for (const topic of post.data.topics ?? []) {
    counts.set(topic, (counts.get(topic) ?? 0) + 1);
  }
}

const qualifyingTopics = Array.from(counts.entries())
  .filter(([, c]) => c >= 2)
  .sort(([, a], [, b]) => b - a);

const topicsSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Blog Topics",
  "description": "Browse blog posts by topic on Prassanna Ravishankar's website",
  "url": "https://prassanna.io/topics/",
  "mainEntity": {
    "@type": "ItemList",
    "numberOfItems": qualifyingTopics.length,
    "itemListElement": qualifyingTopics.map(([topic, count], index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "item": {
        "@type": "Thing",
        "name": topic,
        "url": `https://prassanna.io/topics/${encodeURIComponent(topic)}/`,
        "description": `${count} blog posts tagged ${topic}`
      }
    }))
  }
};
---

<Layout
  title="Blog Topics | Prassanna Ravishankar"
  description={`Browse ${allPosts.length} articles across ${qualifyingTopics.length} topics on machine learning, AI agents, MLOps, and more.`}
>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(topicsSchema)} />

  <div class="container mx-auto py-12 px-4">
    <div class="max-w-4xl mx-auto">
      <!-- Breadcrumb navigation -->
      <nav class="text-sm text-muted dark:text-muted mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
          <li>
            <a href="/" class="hover:text-teal-600 dark:hover:text-teal-400">Home</a>
          </li>
          <li>
            <svg class="w-3 h-3 text-muted" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </li>
          <li>
            <a href="/blog/" class="hover:text-teal-600 dark:hover:text-teal-400">Blog</a>
          </li>
          <li>
            <svg class="w-3 h-3 text-muted" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </li>
          <li>
            <span class="text-gray-700 dark:text-main/80" aria-current="page">
              Topics
            </span>
          </li>
        </ol>
      </nav>

      <!-- Header -->
      <header class="mb-12 text-center">
        <h1 class="text-4xl font-bold mb-4">Blog Topics</h1>
        <p class="text-xl text-gray-600 dark:text-muted">
          {allPosts.length} articles across {qualifyingTopics.length} topics
        </p>
      </header>

      <!-- Topics grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {qualifyingTopics.map(([topic, count]) => (
          <a
            href={`/topics/${encodeURIComponent(topic)}/`}
            class="block p-6 bg-white dark:bg-slate-800 rounded-lg shadow-md hover:shadow-lg transition-all hover:-translate-y-1 border border-gray-200 dark:border-gray-700"
          >
            <div class="flex items-start justify-between mb-3">
              <h2 class="text-xl font-bold text-gray-900 dark:text-white">
                {topic}
              </h2>
              <span class="bg-teal-100 dark:bg-teal-900 text-teal-700 dark:text-teal-300 px-3 py-1 rounded-full text-sm font-medium">
                {count} {count === 1 ? 'article' : 'articles'}
              </span>
            </div>
            <p class="text-gray-600 dark:text-muted">
              Explore {count} {count === 1 ? 'article' : 'articles'} tagged {topic}
            </p>
          </a>
        ))}
      </div>

      <!-- Back to blog link -->
      <div class="mt-12 pt-6 border-t border-gray-200 dark:border-gray-700 text-center">
        <a
          href="/blog/"
          class="text-teal-600 dark:text-teal-400 hover:underline inline-flex items-center"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to all posts
        </a>
      </div>
    </div>
  </div>
</Layout>
